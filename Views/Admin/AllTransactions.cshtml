@model IEnumerable<SportEquipWeb.Models.Core.Transaction>

@{
    ViewBag.Title = "AllTransactions";
}

<h2>All Transactions</h2>


<table class="table">
    <tr>
        <th>
            @Html.Label("Equipment Name")
        </th>
        <th>
            @Html.Label("Equipment Owner")
        </th>
        <th>
            @Html.DisplayName("Day Rented")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfDaysRented)
        </th>
 
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
           Description
        </th>
        <th>
            @Html.Label("Buyer")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Equipment.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Equipment.Owner.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateCreated)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NumberOfDaysRented)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Amount)
    </td>
    <td>
        @item.Equipment.LongDescription
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User.UserName)
    </td>

</tr>
    }

</table>
