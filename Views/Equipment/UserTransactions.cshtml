@model IEnumerable<SportEquipWeb.Models.Core.Transaction>

@{
    ViewBag.Title = "UserTransactions";
}

<h2>User Transactions</h2>


<table class="table">
    <tr>

        <th>
            @Html.Label("Equipment Name")
        </th>
        <th>
            @Html.Label("Equipment Owner")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfDaysRented)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            Short Description
        </th>
        <th>
            @Html.Label("Date Order")
        </th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.Equipment.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Equipment.Owner.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NumberOfDaysRented)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Amount)
    </td>
    <td>
        @if (item.Equipment.LongDescription.Length > 35)
        {
        <td> @item.Equipment.LongDescription.Substring(0, 35) ...</td>
    }
    else
    {
        <td> @item.Equipment.LongDescription</td>
    }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
    </tr>
}

</table>
